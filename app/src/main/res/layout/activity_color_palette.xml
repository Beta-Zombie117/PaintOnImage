<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mihai.paintonimage.Color_Palette_Activity">

    <Button
        android:id="@+id/button_color"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff"
        android:onClick="setColor"
        android:text="PRESS TO SET COLOR"
        tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView_color_properties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="255, 255, 255"
            tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="Red      0"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <SeekBar
            android:id="@+id/seekBar_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.71"
            tools:ignore="InefficientWeight,RtlHardcoded" />


        <TextView
            android:id="@+id/textView1b"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="            255"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="Green  0"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <SeekBar
            android:id="@+id/seekBar_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.71"
            tools:ignore="InefficientWeight,RtlHardcoded" />

        <TextView
            android:id="@+id/textView2b"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="         255"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="Blue    0"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <SeekBar
            android:id="@+id/seekBar_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.71"
            tools:ignore="InefficientWeight,RtlHardcoded" />

        <TextView
            android:id="@+id/textView3b"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity=""
            android:text="          255"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
